append head
  link(rel='stylesheet', href='/stylesheets/bootstrapindex.css')

block content
  div.cover-container.d-flex.w-100.h-100.p-3.mx-auto.flex-column
    header.mb-auto
      div
        h3.float-md-start.mb-0 Cover
        nav.nav.nav-masthead.justify-content-center.float-md-end
          a.nav-link.fw-bold.py-1.px-0.active( aria-current='page' href='#') Home
