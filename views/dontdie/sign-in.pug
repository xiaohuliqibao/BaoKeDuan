script. 
  const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
  const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl)) 
  const alertPlaceholder = document.getElementById('liveAlertPlaceholder')
  function myFunction() {
    var code  = document.getElementById("floatingPassword");
    var qqnumber = document.getElementById("floatingInput");
    if (code.value == 22 && qqnumber.value == 11) {
      window.location.href = "/dontdie/index";
    } else {
      $('#ealert').alert('close')
      alert('Error, Plz check your number or code!', 'danger')
    }
  }
  const alert = (message, type) => {
    const wrapper = document.createElement('div')
    wrapper.innerHTML = [
      `<div class="alert alert-${type} alert-dismissible" role="alert" id="ealert">`,
      `   <div>${message}</div>`,
      '   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
      '</div>'
    ].join('')

    alertPlaceholder.append(wrapper)
  }